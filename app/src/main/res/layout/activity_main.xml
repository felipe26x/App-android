<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="661dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relat"
        android:background="#F4F4F4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/barraBotones">

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="658dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="40dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="8dp">

                    <ViewFlipper
                        android:id="@+id/flipper"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="196dp">

                    </ViewFlipper>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Productos  Recomendados"
                    android:textColor="#020202"
                    android:textSize="24sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"

                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp">


                    <Button
                        android:id="@+id/ver"
                        android:layout_width="116dp"
                        android:layout_height="37dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="145dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/disenobotones"
                        android:text="Ver"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="160dp"
                        android:layout_height="123dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/platano" />

                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="148dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:text="Bananos Criollos"
                        android:textColor="#090909"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/cantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="10dp"

                        android:text="1kg x 10.000"
                        android:textColor="#4CAF50"
                        android:textSize="22sp" />


                    <ImageButton
                        android:id="@+id/imageButton167"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="145dp"
                        android:backgroundTint="#00FFFFFF"
                        app:srcCompat="@drawable/favorito" />

                    <ImageButton
                        android:id="@+id/imageButton155"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="145dp"
                        android:backgroundTint="#00FFFFFF"
                        app:srcCompat="@drawable/ic_baseline_near_me_24" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#151515"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="4dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ImagenPerfil"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="18dp"
                        tools:cardElevation="10dp">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/frutas" />


                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginRight="20dp"
                        android:text="1kg x 18.000 "
                        android:textColor="#4CAF50"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="20dp"
                        android:text="Cacao"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />

                    <ImageButton
                        android:id="@+id/imageButton194"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="320dp"
                        android:layout_marginTop="10dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/ic_heart__1_" />

                    <ImageButton
                        android:id="@+id/imagebutton118"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="180dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/ic_paper_plane__1_" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">


                    <TextView
                        android:id="@+id/cantidad3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="90dp"
                        android:text="1kg x 6.000 "
                        android:textColor="#4CAF50"
                        android:textSize="20sp" />


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="120dp"
                        android:layout_height="123dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/papa" />

                    <TextView
                        android:id="@+id/nombre2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="30dp"
                        android:text="Papa parda"
                        android:textColor="#090909"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/descripcion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="60dp"
                        android:text=" papa de la negra" />


                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="150dp"
                        android:onClick="listar"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/disenobotones"
                        android:text="Ver"
                        android:textColor="#FFFFFF" />


                    <ImageButton
                        android:id="@+id/imageButton165"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="140dp"
                        android:backgroundTint="#00FFFFFF"
                        app:srcCompat="@drawable/ic_baseline_near_me_24" />

                    <ImageButton
                        android:id="@+id/imageButton120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="140dp"
                        android:backgroundTint="#00FFFFFF"
                        app:srcCompat="@drawable/favorito"
                        tools:ignore="DuplicateIds" />


                </androidx.cardview.widget.CardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reciclador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:padding="3dp"
                    android:scrollbars="vertical">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">


                    <TextView
                        android:id="@+id/cantidad4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="90dp"
                        android:text="1kg x 14.000 "
                        android:textColor="#4CAF50"
                        android:textSize="20sp" />


                    <Button
                        android:id="@+id/button90"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="150dp"
                        android:layout_marginBottom="10dp"
                        android:onClick="productos"
                        android:background="@drawable/disenobotones"
                        android:text="Ver"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="120dp"
                        android:layout_height="123dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/cafe" />

                    <TextView
                        android:id="@+id/nombre4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="30dp"
                        android:text="Cafe "
                        android:textColor="#090909"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/descripcion4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="60dp"
                        android:text="cafe capuccino " />

                    <ImageButton
                        android:id="@+id/imageButton121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="140dp"
                        android:backgroundTint="#00FFFFFF"
                        app:srcCompat="@drawable/favorito" />

                    <ImageButton
                        android:id="@+id/imageButton180"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="140dp"
                        android:backgroundTint="#00FFFFFF"
                        app:srcCompat="@drawable/ic_baseline_near_me_24" />


                </androidx.cardview.widget.CardView>


                <ListView
                    android:id="@+id/myListView3"
                    android:layout_width="match_parent"
                    android:layout_height="1200dp"

                    android:layout_marginBottom="40dp"
                    android:scrollbars="vertical"></ListView>



            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/barraBotones"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="412dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/disenobtnnavegacion"
            android:elevation="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/btnHome"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_home_24" />

            <ImageButton
                android:id="@+id/btnsubir"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="subir"
                android:src="@drawable/ic_baseline_arrow_circle_up_24" />


            <ImageButton
                android:id="@+id/btnfav"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="fav"
                android:src="@drawable/favorito" />

            <ImageButton
                android:id="@+id/btnperfil"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:onClick="perfil3"
                android:src="@drawable/ic_baseline_person_24" />

        </LinearLayout>

        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


        </include>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:theme="@style/Menu"
        app:headerLayout="@layout/header_navigation"
        app:menu="@menu/menu_for_navigationview">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

