                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/ic_arrow_right" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/contenedor3"
                android:layout_width="match_parent"
